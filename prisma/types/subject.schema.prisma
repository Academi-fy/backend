model Subject {
  id        String   @id @default(uuid()) @db.Uuid
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  courses   Course[]
  school    School   @relation(fields: [schoolId], references: [id])
  schoolId  String @db.Uuid
  shortName String
  type      String

  @@map("subjects")
}