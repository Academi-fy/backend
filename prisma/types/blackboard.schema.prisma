model Blackboard {
  id        String   @id @default(uuid()) @db.Uuid
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  authors    User[]         @relation("BlackboardAuthor")
  coverImage String?
  school     School          @relation(fields: [schoolId], references: [id])
  schoolId   String @db.Uuid
  tags       BlackboardTag[] @relation("BlackboardTag")
  targets    User[]
  text       String?
  title      String

  @@map("blackboards")
}

model BlackboardTag {
  id        String   @id @default(uuid()) @db.Uuid
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  blackboards Blackboard[] @relation("BlackboardTag")
  name        String

  @@map("blackboard_tags")
}
